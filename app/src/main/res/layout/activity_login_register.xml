<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c1"
    tools:context=".activity.WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40sp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/v_loading_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_view_library"
            android:backgroundTint="@color/c4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:text="Full name"
            android:textColor="@color/c4"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/v_register_in_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:autofillHints="name"
            android:background="@drawable/bg_etext_bg"
            android:hint="Your full name"
            android:inputType="text"
            android:textColor="@color/c2"
            android:textColorHint="@color/c7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:text="Username"
            android:textColor="@color/c4"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/v_register_in_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:autofillHints="username"
            android:background="@drawable/bg_etext_bg"
            android:hint="Your username"
            android:inputType="text"
            android:textColor="@color/c2"
            android:textColorHint="@color/c7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:text="Password"
            android:textColor="@color/c4"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/v_register_in_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3sp"
            android:autofillHints="password"
            android:background="@drawable/bg_etext_bg"
            android:hint="Your password"
            android:inputType="textPassword"
            android:textColor="@color/c2"
            android:textColorHint="@color/c7" />

        <Button
            android:id="@+id/v_register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="12sp"
            android:background="@drawable/bg_border_br"
            android:text="Register"
            android:textColor="@color/c4"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>