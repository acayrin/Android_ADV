<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18sp"
    android:background="@drawable/bg_list_item"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/lv_item_course_icon"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_view_calendar"
        app:tint="@color/c4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7sp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lv_item_class_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c4"
            android:padding="4sp"
            android:text="{class_course}"
            android:textColor="@color/c1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lv_item_class_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6sp"
            android:text="{0}"
            android:textColor="@color/c4"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lv_item_class_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6sp"
            android:text="{0}"
            android:textColor="@color/c4"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>