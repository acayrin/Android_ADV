<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.WebViewActivity">

    <WebView
        android:id="@+id/v_webview"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/v_fragment_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_menu_bg"
        android:orientation="horizontal"
        android:paddingTop="2sp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/v_webview_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8sp"
            android:background="@drawable/bg_menu_item"
            android:src="@drawable/ic_arrowleft"
            app:tint="@color/c4" />

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/v_webview_url_bar"
            android:text="{0}"
            android:gravity="center_vertical"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/v_webview_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8sp"
            android:background="@drawable/bg_menu_item"
            android:src="@drawable/ic_view_share_variant"
            app:tint="@color/c4" />
    </LinearLayout>
</LinearLayout>